{
  "compilerOptions": {
      "strict": true,
      "moduleResolution": "node",
      "target": "es2017",
      "lib": [
          "es2017"
      ],
      "typeRoots": [
          "node_modules/@types",
          "typings"
      ],
      "plugins": [
          {
              "name": "tslint-language-service"
          }
      ],
      "outDir": "dist",
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules"
  ]
}