{
  "name": "restic-orchestrator",
  "version": "0.5.2",
  "description": "an orchestrator for restic backups on multiple hosts",
  "repository": "https://github.com/datenknoten/restic-orchestrator",
  "main": "src/index.ts",
  "scripts": {
    "test": "mocha --bail -r ts-node/register src/**/*.spec.ts",
    "coverage": "nyc mocha --bail -r ts-node/register src/**/*.spec.ts",
    "lint": "tslint -p tsconfig.json",
    "start": "ts-node src/main.ts",
    "compile": "tsc -p tsconfig.json",
    "build": "cd dist && nexe --verbose --output restic-orchestrator --resource **/*.json main.js",
    "generate-config-schema": "ts-node src/generate-config-schema.ts"
  },
  "keywords": [
    "restic",
    "backup",
    "typescript",
    "node"
  ],
  "author": "Tim Schumacher",
  "license": "Apache-2.0",
  "dependencies": {
    "appdirectory": "0.1.0",
    "caporal": "^0.10.0",
    "fs-extra": "^7.0.0",
    "winston": "^3.1.0",
    "class-validator": "^0.9.1"
  },
  "devDependencies": {
    "@types/node": "^11.11.4",
    "@types/fs-extra": "^5.0.4",
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.2",
    "typescript": "^3.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "nexe": "2.0.0-rc.34",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "sinon": "^6.3.4",
    "nyc": "^13.0.1",
    "husky": "^1.1.0",
    "tslint-language-service": "0.9.9",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "lines": 10,
    "extension": [
      ".js",
      ".ts"
    ],
    "include": [
      "src/**/!(*.spec.*).[tj]s?(x)"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "src/interfaces"
    ],
    "report-dir": "coverage"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test && npm run compile"
    }
  }
}
