{
  "name": "restic-orchestrator",
  "version": "0.5.2",
  "description": "an orchestrator for restic backups on multiple hosts",
  "repository": "https://github.com/datenknoten/restic-orchestrator",
  "main": "src/index.ts",
  "scripts": {
    "precommit": "npm run lint",
    "prepush": "npm run lint && npm run test && npm run compile",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "test": "mocha --bail -r ts-node/register src/**/*.spec.ts",
    "coverage": "nyc mocha --bail -r ts-node/register src/**/*.spec.ts",
    "lint": "tslint -p tsconfig.json",
    "start": "ts-node src/main.ts",
    "compile": "tsc -p tsconfig.json",
    "build": "cd dist && nexe --verbose --output restic-orchestrator --resource **/*.json main.js",
    "generate-config-schema": "ts-node src/generate-config-schema.ts"
  },
  "keywords": [
    "restic",
    "backup",
    "typescript",
    "node"
  ],
  "author": "Tim Schumacher",
  "license": "Apache-2.0",
  "dependencies": {
    "appdirectory": "0.1.0",
    "caporal": "^0.10.0",
    "fs-extra": "^5.0.0",
    "winston": "^2.4.1",
    "class-validator": "^0.8.5"
  },
  "devDependencies": {
    "@types/node": "^10.0.3",
    "@types/winston": "^2.3.9",
    "@types/fs-extra": "^5.0.2",
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/sinon": "^4.3.1",
    "typescript": "^2.8.1",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "nexe": "2.0.0-rc.26",
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "sinon": "^4.5.0",
    "nyc": "^11.3.0",
    "husky": "^0.14.3",
    "tslint-language-service": "0.9.9",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "lines": 10,
    "extension": [
      ".js",
      ".ts"
    ],
    "include": [
      "src/**/!(*.spec.*).[tj]s?(x)"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "src/interfaces"
    ],
    "report-dir": "coverage"
  }
}
