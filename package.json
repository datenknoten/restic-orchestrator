{
  "name": "restic-orchestrator",
  "version": "0.5.2",
  "description": "an orchestrator for restic backups on multiple hosts",
  "repository": "https://github.com/datenknoten/restic-orchestrator",
  "main": "src/index.ts",
  "scripts": {
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "coverage": "nyc mocha -r ts-node/register src/**/*.spec.ts",
    "lint": "tslint -p tsconfig.json",
    "start": "ts-node src/main.ts",
    "compile": "tsc -p tsconfig.json",
    "build": "cd dist && nexe --verbose --output restic-orchestrator --resource **/*.json main.js",
    "generate-config-schema": "ts-node src/generate-config-schema.ts"
  },
  "keywords": [
    "restic",
    "backup",
    "typescript",
    "node"
  ],
  "author": "Tim Schumacher",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "5.5.1",
    "appdirectory": "0.1.0",
    "caporal": "0.9.0",
    "fs-extra": "5.0.0",
    "typescript-json-schema": "0.20.0",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "@types/node": "8.0.56",
    "@types/winston": "2.3.7",
    "@types/fs-extra": "4.0.5",
    "@types/chai": "4.0.9",
    "@types/mocha": "2.2.44",
    "@types/sinon": "4.0.0",
    "typescript": "2.6.2",
    "ts-node": "4.0.0",
    "tslint": "5.8.0",
    "nexe": "2.0.0-rc.22",
    "chai": "4.1.2",
    "mocha": "4.0.1",
    "sinon": "4.1.3",
    "nyc": "11.3.0"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "lines": 10,
    "extension": [
      ".js",
      ".ts"
    ],
    "include": [
      "src/**/!(*.spec.*).[tj]s?(x)"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "src/interfaces"
    ],
    "report-dir": "coverage"
  }
}
